    "blocks": [
      "autocomplete-result-list.v2"
    ],
    "props": {
      "customSearchPageUrl": "/search?_query=${term}",
      "openAutocompleteOnFocus": true
    }
  },
  "autocomplete-result-list.v2": {
    "blocks": [
      "product-summary"
    ]
  }, */
  "flex-layout.col#logo-desktop": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "logo#desktop"
    ]
  },
  "flex-layout.col#category-menu": {
    "props": {
      "verticalAlign": "middle"
    },
    "children": [
      "vtex.menu@2.x:menu#category-menu"
    ]
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo.png?v=1",
      "width": "180"
    }
  },
  "header-layout.mobile": {
    "children": [
      "nosto",
      "helmet-component",
      "image#franja-mobile",
      "my-account-script",
      "sticky-layout#1-mobile",
      "flex-layout.row#3-mobile",
      "flex-layout.row#2-mobile"
    ]
  },
  "sticky-layout#1-mobile": {
    "children": [
      "flex-layout.row#1-mobile"
    ]
  },
  "flex-layout.row#1-mobile": {
    "children": [
      "drawer",
      "logo#mobile",
      "flex-layout.col#spacer",
      "image#tiendas",
      "login",
      "minicart.v2"
    ],
    "props": {
      "blockClass": "main-header-mobile",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true
    }
  },
  "flex-layout.row#2-mobile": {
    "children": [
      "image#franja-2"
    ],
    "props": {
      "blockClass": "franja-2",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true
    }
  },
  "image#franja-2": {
    "title": "franja-2",
    "props": {
      "src": "",
      "link": "",
      "maxHeight": "",
      "maxWidth": "",
      "blockClass": "franja-2"
    }
  },
  "flex-layout.row#3-mobile": {
    "children": [
      "search-bar"
    ],
    "props": {
      "blockClass": "3-mobile",
      "preventHorizontalStretch": true,
      "preserveLayoutOnMobile": true,
      "fullWidth": true
    }
  },
  "drawer": {
    "children": [
      "search-bar",
      "menu#drawer"
    ]
  },
  "menu#drawer": {
    "children": [
      "menu-item#menu-mobile-equipment",
      "menu-item#menu-mobile-men",
      "menu-item#menu-mobile-women",
      "menu-item#menu-sale",
      "menu-item#menu-ver-carro",
      "menu-item#menu-sigue-compra",
      "menu-item#menu-tiendas",
      "menu-item#menu-mi-cuenta"
    ],
    "props": {
      "orientation": "vertical"
    }
  },
  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://storecomponents.vteximg.com.br/arquivos/store-theme-logo-mobile.png"
    }
  }
}